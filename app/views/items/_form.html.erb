<%= form_for @item, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :item_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :category_id, Category.all.collect{|cate| [cate.name, cate.id]}, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :v_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :v_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sub_title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sub_title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :avatar, :class => 'control-label' %>
    <div class="controls">
      <%= image_tag(@item.avatar_url) if @item.avatar? %>
      <%= f.file_field :avatar, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :desc, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                items_path, :class => 'btn' %>
  </div>
<% end %>
